        <Button x:Name="btn_Pkmn_Encounter" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Random Encounter" HorizontalAlignment="Left" Margin="106.667,0,0,0" VerticalAlignment="Top" Width="116" Grid.Column="1" Height="39" Click="btn_Pkmn_Encounter_Click" Grid.RowSpan="2"/>
